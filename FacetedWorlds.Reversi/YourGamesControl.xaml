<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:FacetedWorlds_Reversi_Views="clr-namespace:FacetedWorlds.Reversi.Views" xmlns:Custom="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" xmlns:ic="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
	xmlns:local="clr-namespace:FacetedWorlds.Reversi"
	mc:Ignorable="d"
	x:Class="FacetedWorlds.Reversi.YourGamesControl"
	d:DesignWidth="448" d:DesignHeight="591.5">

	<UserControl.Resources>
		<DataTemplate x:Key="GameSummaryTemplate">
			<FacetedWorlds_Reversi_Views:GameSummaryControl Height="46" d:LayoutOverrides="Width"/>
		</DataTemplate>
	</UserControl.Resources>

	<StackPanel x:Name="LayoutRoot" Background="Transparent" d:DataContext="{d:DesignData /SampleData/MainViewModelSampleData.xaml}">
		<Grid d:LayoutOverrides="Width">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Content="New Game">
				<Custom:Interaction.Triggers>
					<Custom:EventTrigger EventName="Click">
						<ic:NavigateToPageAction TargetPage="/Views/NewGamePage.xaml"/>
					</Custom:EventTrigger>
				</Custom:Interaction.Triggers>
			</Button>
			<TextBlock Text="{Binding ApprovedUserName}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,4,0"/>
		</Grid>
		<TextBlock Margin="8,0,0,0" TextWrapping="Wrap" Text="Your Move:" HorizontalAlignment="Left" Height="27" Width="101">
			<TextBlock.Foreground>
				<SolidColorBrush Color="{StaticResource PhoneAccentColor}"/>
			</TextBlock.Foreground>
		</TextBlock>
		<ItemsControl ItemTemplate="{StaticResource GameSummaryTemplate}" ItemsSource="{Binding YourMove}" Margin="8,0,0,0" UseLayoutRounding="True"/>
		<TextBlock Margin="8,8,0,0" TextWrapping="Wrap" Text="Their Move:" HorizontalAlignment="Left" Height="27" Width="104">
			<TextBlock.Foreground>
				<SolidColorBrush Color="{StaticResource PhoneAccentColor}"/>
			</TextBlock.Foreground>
		</TextBlock>
		<ItemsControl ItemTemplate="{StaticResource GameSummaryTemplate}" ItemsSource="{Binding TheirMove}" Margin="8,0,0,0" UseLayoutRounding="True"/>
	</StackPanel>
</UserControl>